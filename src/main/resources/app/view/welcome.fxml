<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:controller="app.controllers.WelcomeController" xmlns:fx="http://javafx.com/fxml">
    <left>
        <VBox id="leftMenu">
            <Button styleClass="leftButtons" text="Add Question" />
            <Button styleClass="leftButtons" text="TEST DB" onAction="#testDBConnection"/>
        </VBox>
    </left>
    <center>
        <VBox id="centerContent">
            <VBox id="welcomeMessage">
                <Label text="Welcome to the QuizApp" />
                <Label text="Test your knowledge" />
            </VBox>
            <Button fx:id="startQuizButton" text="Start Quiz" onAction="#startQuiz"/>
        </VBox>
    </center>
</BorderPane>